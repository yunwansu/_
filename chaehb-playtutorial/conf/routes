# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
GET     /       controllers.Assets.at(path="/public", file="index.html")


GET     /api/postal/street_name_addresses   controllers.PostalCodesController.streetNameAddresses(offset:Long ?= 0, length:Int ?= 25)

#Setup page : only ApplicationConfig.DatabaseReady == false
POST     /setup  controllers.DatabaseSetupController.setup
# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.versioned(path="/public", file: Asset)
