# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
GET     /       controllers.Assets.at(path="/public", file="index.html")

#Setup page : only ApplicationConfig.DatabaseReady == false
POST     /setup  controllers.DatabaseSetupController.setup
GET      /all        controllers.HelloController.all
POST      /find       controllers.HelloController.find
GET     /get         controllers.HelloController.get(county?="")
GET     /list        controllers.HelloController.list(offset:Long?=0, length:Int?=25)
# Map static resources from the /public folder to the /assets URL path
GET     /*file               controllers.Assets.versioned(path="/public", file: Asset)
